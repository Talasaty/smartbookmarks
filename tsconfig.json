{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "paths": {
      "$components/*": [
        "src/components/*"
      ],
      "$domain/*": [
        "src/domain/*"
      ],
      "$utils/*": [
        "src/utils/*"
      ],
      "$views/*": [
        "src/views/*"
      ],
      "$data/*": [
        "src/data/*"
      ],
      "$icons/*": [
        "src/icons/*"
      ],
      "$imgs/*": [
        "src/imgs/*"
      ],
      "$fonts/*": [
        "src/fonts/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
